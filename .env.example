# KairosAI Environment Configuration
# Copy this file to .env and fill in your actual values

# Backend Environment Variables

# Database Configuration
DATABASE_URL=sqlite:///./ai_mvp.db
# For PostgreSQL: postgresql://user:password@localhost:5432/ai_mvp

# AI Models Configuration
# Claude (Anthropic) - Get your API key from https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Gemini (Google) - Get your API key from Google AI Studio
GEMINI_API_KEY=your_gemini_api_key_here

# AI Provider Selection: "claude" (recommended) or "gemini"
AI_PROVIDER=claude

# File Storage Configuration
UPLOAD_DIR=uploads
MAX_FILE_SIZE=52428800  # 50MB in bytes

# Vector Database Configuration
VECTOR_DB_PATH=./vector_db
EMBEDDING_MODEL=all-MiniLM-L6-v2

# Chat Configuration
MAX_CHAT_HISTORY=20
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# Security Configuration
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Frontend Environment Variables (.env.local)
# NEXT_PUBLIC_API_URL=http://localhost:8000
